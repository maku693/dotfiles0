# Android
export ANDROID_DIR="$HOME/Library/Android"
export ANDROID_HOME="$ANDROID_DIR/sdk"
export ANDROID_NDK="$ANDROID_DIR/ndk"
export PATH="$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools:$ANDROID_NDK:$PATH"

# Arduino-Makefile
export ARDUINO_DIR="/Applications/Arduino.app/Contents/Java"
export ARDMK_DIR="/usr/local/opt/arduino-mk"

# nix
export NIX_DIR="$HOME/.nix-profile"

# nvm
export NVM_DIR="$HOME/.nvm"

# rbenv
export PATH="$HOME/.rbenv/bin:$PATH"

# Other Global Variables
export PATH="$HOME/bin:$PATH"
export TERM=screen-256color
export EDITOR=vim
